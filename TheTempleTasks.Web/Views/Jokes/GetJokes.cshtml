@{
}

@model List<TheTempleTasks.Web.Models.Dtos.JokeWebDto>

<div class="text-center">
    <h1 class="display-4">Welcome To The Jokes App</h1>
    <p>Dont't take them to heart, it's all in the spirit of ribaldry😄</a>.</p>
</div>


<table class="table table-striped">
    <thead>
        <tr>

            <th>Type</th>
            <th>Setup</th>
            <th>Delivery</th>
            <th>Category</th>
            <th>Safe</th>
            <th>Language</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var joke in Model)
        {
            <tr>
                <td>@joke.Type</td>
                <td>@joke.Setup</td>
                <td>@joke.Delivery</td>
                <td>@joke.Category</td>
                <td>@joke.Safe</td>
                <td>@joke.Lang</td>
            </tr>
        }
    </tbody>
</table>

@if(ViewBag.Error != null)
{
     <div class="alert alert-danger">
        @ViewBag.Error
     </div>
}
